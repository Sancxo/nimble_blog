<h1>All posts: </h1>

<%= for post <- @posts do %>
  <div id={post.id} class="post-item" style="margin-bottom: 3rem;">
    <h2>
      <.link patch={"/blog/#{post.id}"}><%= post.title %></.link>
    </h2>

    <p>
      <time><%= post.date %></time> by <%= post.author %>
    </p>

    <p>
      Tagged as <%= Enum.join(post.tags, ", ") %>
    </p>

    <%= raw(post.description) %>
  </div>
<% end %>
