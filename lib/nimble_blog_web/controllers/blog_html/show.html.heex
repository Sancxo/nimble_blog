<.link patch="/">← All blog posts</.link>

<article class="post">
  <h1><%= @post.title %></h1>

  <p><time><%= @post.date %></time> by <%= @post.author %></p>

  <p id="post-tags">
    Tagged as
    <%= for tag <- @post.tags do %>
      <.link patch={"/tag/#{tag}"} class="text-ultra-violet font-bold"><%= tag %></.link>
    <% end %>
  </p>

  <div class="post-body">
    <%= raw @post.body %>
  </div>
</article>
